
{% block title %}
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <link href="/asset/AceeuilTabAssister.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
{% endblock %}


{% block content %}
<body>
<div class="sticky-top">
    <ul>
        <li><a class="active" href="/Acceuil">Home</a></li>
        <li><a href="/demande">créer une demande</a></li>
        <li id="Deco"><a href="/">Déconnexion</a></li>
    </ul>


</div>
<div id="pnl">
    <div id="Gauche">
        <img id="LogoOrt" src="/asset/LogoOrt.png">
        <H1 id="titre">HelpOrt</H1>
        <img src="/asset/LogoOrtHelp.png" id="LogoOrtHelp">

    </div>

    <div id="Droite">
        <h1 id="Bienvenue">Acceuil</h1>
        <div id="centreDroite">
            <form method="post">
            <input type="submit">
        <table id="Table" class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Matière</th>
                <th scope="col">Description</th>
                <th scope="col">Nature</th>
                <th scope="col">Date</th>
                <th scope="col">Heure</th>
                <th scope="col">etat</th>
            </tr>
            </thead>
            <tbody class="table table-success table-striped">
            {%for demande in demandes %}
            <tr>
                <td><input type="radio" name="demande_selectionnee" value="{{ demande.getSeanceId }}"></td>
                <td>{{ demande.getIntitule }}</td>
                <td>{{ demande.getMatiere }}</td>
                <td>{{ demande.getDescription }}</td>
                <td>{{ demande.getNature }}</td>
                <td>{{ demande.getDate }}</td>
                <td>{{ demande.getHeure }}</td>
                <td>{{ demande.getEtat }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
            </form>
        </div>
    </div>
</div>
{% if error %}
    <script>
        alert("{{ errorMessage }}")
    </script>
{% endif %}
</body>
</html>
{% endblock %}

